generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  ID Int @id @default(autoincrement())
  customToken String
  email String
  password String
  Providers Provider[]
  Area Area[]
  googleID String? @default("null")
}

model Provider {
  ID Int @id @default(autoincrement())
  user User @relation(fields: [userID], references: [ID])
  userID Int
  Name String
  accessToken String
  refreshToken String
}

model Area {
  ID Int @id @default(autoincrement())
  user User @relation(fields: [userID], references: [ID])
  userID Int
  name String
  actionID Int
  reactionID Int
}